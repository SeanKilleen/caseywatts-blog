---
import SocialMedia from './SocialMedia.astro';
const { origin } = Astro.url;
---
<header class="drop-shadow-md hover:drop-shadow-sm transition ease-in-out duration-500">
	<nav class="shadow bg-gradient-to-r from-violet-100 to-blue-100">
		<div class="px-6 py-4 mx-auto md:flex justify-between items-center space-x-6">
			<div class="flex items-center justify-between">
				<div>
					<a class="text-xl text-gray-800 md:text-2xl  hover:text-gray-700 " href={origin}> Hi, I'm Casey!</a>
				</div>

				<!-- Mobile menu button -->
				<div class="flex lg:hidden">
					<button type="button" class="text-gray-500 hover:text-gray-600 focus:outline-none focus:text-gray-600 " aria-label="toggle menu" onclick="showHideMobileNavMenu()">
						<svg viewBox="0 0 24 24" height="24px" width = "24px" class="fill-current">
							<path fill-rule="evenodd" d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"></path>
						</svg>
					</button>
				</div>
			</div>
			<!-- Mobile Menu open: "block", Menu closed: "hidden" -->
			<div id="mainNav" class="flex-grow justify-between items-center hidden lg:flex md:space-x-10">
				<div class="flex flex-col md:flex-row items-center space-x-0 md:space-x-6 space-y-2 md:space-y-0">
					<a class="text-gray-700 hover:text-indigo-500 text-center" href="/blog">Blog</a>
					<a class="text-gray-700 hover:text-indigo-500 text-center" href="/projects">Projects</a>
					<a class="text-gray-700 hover:text-indigo-500 text-center" href="/contact">Contact</a>
				</div>
				<hr class="block md:hidden w-1/3 h-1 mx-auto my-3 md:my-0 flex-1 bg-slate-300">
				<div class="flex flex-col md:flex-row items-center space-x-0 space-y-2 md:space-y-0 md:space-x-6">
					<a class="text-gray-700 hover:text-indigo-500 text-center" href="https://www.debuggingyourbrain.com">Book</a>
					<a class="text-gray-700 hover:text-indigo-500 text-center" href="https://www.youtube.com/watch?v=nj3IoW_rboE&list=PLsGBNq2i4TkLJUc2p5-p1T2LATcuP-Kx1">Videos</a>
					<a class="text-gray-700 hover:text-indigo-500 text-center" href="https://www.listennotes.com/playlists/featuring-casey-watts-CDTgofP45ih/episodes/">Podcasts</a>
					<a class="text-gray-700 hover:text-indigo-500 text-center" href="https://www.happyandeffective.com">Work with Casey</a>
					<div class="md:space-x-2 my-3 md:my-0">
						<SocialMedia SVGSize="24" />
					</div>
				</div>
			</div>
		</div>
	</nav>
</header>

<script is:inline>
  function showHideMobileNavMenu() {
    console.log("lol");
    var mainNav = document.getElementById("mainNav");
    if (mainNav.classList.contains("hidden")) {
      mainNav.classList.remove("hidden");
    } else {
      mainNav.classList.add("hidden");
    }
  }
</script>
