---
import SocialMedia from './SocialMedia.astro';
const { origin } = Astro.url;
---
<header class="drop-shadow-md hover:drop-shadow-sm transition ease-in-out duration-500">
	<nav class="shadow bg-blue-100">
		<div class="px-2 py-2 md:px-6 md:py-4 mx-auto md:flex md:justify-between md:items-center">
			<div class="flex items-center justify-between">
				<div>
					<a class="text-xl font-bold text-gray-800 md:text-2xl hover:text-gray-700 " href={origin}> Hi, I'm Casey!</a>
				</div>

				<!-- Mobile menu button -->
				<div class="flex md:hidden">
					<button type="button" class="text-gray-500 hover:text-gray-600 focus:outline-none focus:text-gray-600 " aria-label="toggle menu" onclick="showHideMobileNavMenu()">
						<svg viewBox="0 0 24 24" class="w-4 h-4 fill-current">
							<path fill-rule="evenodd" d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"></path>
						</svg>
					</button>
				</div>
			</div>
			<!-- Mobile Menu open: "block", Menu closed: "hidden" -->
			<div id="mainNav" class="flex-grow justify-between items-center block hidden md:flex">
				<div class="flex flex-col md:flex-row md:mx-6">
					<a class="my-1 text-gray-700 hover:text-indigo-500  md:mx-3 md:my-0 text-center" href="/my-story">About Casey</a>
					<a class="my-1 text-gray-700 hover:text-indigo-500  md:mx-3 md:my-0 text-center" href="/blog">Blog</a>
					<a class="my-1 text-gray-700 hover:text-indigo-500  md:mx-3 md:my-0 text-center" href="/contact">Contact</a>
				</div>
				<div class="flex flex-row">
					<a class="my-1 text-gray-700 hover:text-indigo-500  md:mx-3 md:my-0 text-center" href="https://www.debuggingyourbrain.com">Book</a>
					<a class="my-1 text-gray-700 hover:text-indigo-500  md:mx-3 md:my-0 text-center" href="https://www.youtube.com/watch?v=nj3IoW_rboE&list=PLsGBNq2i4TkLJUc2p5-p1T2LATcuP-Kx1">Videos</a>
					<a class="my-1 text-gray-700 hover:text-indigo-500  md:mx-3 md:my-0 text-center" href="https://www.listennotes.com/playlists/featuring-casey-watts-CDTgofP45ih/episodes/">Podcasts</a>
					<a class="my-1 text-gray-700 hover:text-indigo-500  md:mx-3 md:my-0 text-center" href="https://www.happyandeffective.com">Work with Casey</a>
					<SocialMedia SVGSize="24" />
				</div>
			</div>
		</div>
	</nav>
</header>

<script is:inline>
  function showHideMobileNavMenu() {
    console.log("lol");
    var mainNav = document.getElementById("mainNav");
    if (mainNav.classList.contains("hidden")) {
      mainNav.classList.remove("hidden");
    } else {
      mainNav.classList.add("hidden");
    }
  }
</script>
