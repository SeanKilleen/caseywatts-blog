---
import { Markup } from "astro-remote";
// import "./src/styles.css";

import Icon from "./icons/Icon.astro";

interface Props {
  url: String;
  variant?: String;
}

const { url, variant } = Astro.props;

const instance = new URL(url).hostname;
const splitPathname = url.split("/");
const tootId = splitPathname[splitPathname.length - 1];

let toot;
let userUrl;

try {
  const res = await fetch(`https://${instance}/api/v1/statuses/${tootId}`);
  console.log(res);
  toot = (await res.json()) || [];
  userUrl = new URL(toot?.account?.url)?.hostname;
} catch (err) {
  toot = null;
  console.log(err);
}
---

<style>


.avatar img {
  width: 60px;
  border-radius: 100px;
}

.avatar span {
  font-size: 0.8rem;
  color: grey;
}

.post-body {
  padding: 0.5rem;
  flex-shrink: 1;
  flex-grow: 1;
}

.post-img {
  overflow: hidden;
  width: 100px;
  height: 100px;
  border-radius: 5px;
  flex-shrink: 0;
  flex-grow: 0;
}

.post-img img {
  min-width: 100%;
  min-height: 100%;
  max-width: 120%;
  max-height: 120%;
}

.footer {
  display: flex;
  justify-content: space-between;
  margin-top: 1rem;
}

.toot-stats {
  display: flex;
  flex-direction: row;
  margin-left: 1rem;
}

.toot-stats span {
  margin: 0 0.5rem;
}

.dark {
  background-color: #282c38;
  color: white;
}

.dark .avatar {
  color: white;
}
</style>

<div class:list={["container", variant || null]}>
  {
    !toot ? (
      <p>Post not found.</p>
    ) : (
      <div class="bg-blue-200 rounded-lg flex flex-row justify-between border-4 border-blue-400">
        <div class=" p-2 flex flex-col justify-center">
          <Markup content={toot.content} />
          {toot.media_attachments.length === 0 ? null : (
            <div class="bg-violet-100 p-2">
              <img
              src={toot.media_attachments[0].url}
              alt={toot.media_attachments[0].description}
              />
              </div>
              )}
        </div>
        <div class="flex flex-col justify-around align-middle items-center">
          <a href={toot.account.url} target="_blank" class="p-3 flex flex-row rounded-lg space-x-3">
            <img
              src={toot.account.avatar}
              alt={`${toot.account.username}'s avatar`}
              class="w-12 rounded-full inline-block"
            />
            <div>
              <div>{`@${toot.account.username}`}</div>
              <div class="text-sm">{`@${userUrl}`}</div>
            </div>
          </a>

          <div class="p-2 rounded-lg flex flex-row align-middle justify-center items-center space-x-4">
            <span>
              <span><Icon icon="reply-fill" /></span>
              {toot.replies_count}
            </span>
            <span>
              <Icon icon="repeat" />
              {toot.reblogs_count}
            </span>
            <span>
              <Icon icon="star-fill" />
              {toot.favourites_count}
            </span>
          </div>
        </div>
      </div>
      <div class="text-right">
        <a class="link" href={toot.url} target="_blank">
          View Post on Mastodon
        </a>
      </div>
    )
  }
</div>