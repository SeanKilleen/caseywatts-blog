---
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import OuterLayout from '../../layouts/OuterLayout.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<OuterLayout>
	<section>
		<div class="bg-blue-50 p-2 md:p-6 my-2 md:my-6 mx-auto prose lg:prose-lg drop-shadow-2xl hover:drop-shadow-xl transition ease-in-out duration-500">
			<h2 class="text-center">Blog Posts</h2>
		</div>
		<ul>
			{
				posts.map((post) => (
					<li class="bg-blue-50 p-2 md:p-6 my-2 md:my-6 mx-auto prose lg:prose-lg drop-shadow-2xl hover:drop-shadow-xl transition ease-in-out duration-500">
						<div class="flex flex-col md:flex-row justify-between ">
							<div>
								<a href={`/blog/${post.slug}/`}>{post.data.title}</a>
								<div>{post.data.tagline}</div>
							</div>
							<div class="text-right italic text-violet-500 text-sm">
								<FormattedDate date={post.data.pubDate} />
							</div>
						</div>
					</li>
				))
			}
		</ul>
	</section>
</OuterLayout>
