---
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import OuterLayout from '../../layouts/OuterLayout.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<OuterLayout>
	<section>
		<div class="bg-blue-50 p-2 md:p-6 my-2 md:my-6 mx-auto max-w-xl lg:prose-lg drop-shadow-2xl hover:drop-shadow-xl transition ease-in-out duration-500">
			<h2 class="text-center mb-0">Blog Posts</h2>
			<p class="text-center">
				<a class="underline text-blue-500" href="/rss.xml">Subscribe via RSS</a>
			</p>
		</div>
		<ul>
			{
				posts.map((post) => (
					<li class="bg-blue-50 p-2 md:p-6 my-2 md:my-6 mx-auto prose lg:prose-lg drop-shadow-2xl hover:drop-shadow-xl transition ease-in-out duration-500">
						<div class="flex flex-col md:flex-row justify-between space-x-0 md:space-x-5 space-y-4 md:space-y-0 align-middle">
							<div class="text-6xl flex align-middle justify-center">
								<span>{post.data.emoji}</span>
							</div>
							<div class="flex-1 flex flex-col align-middle justify-center text-center">
								<a href={`/blog/${post.slug}/`}>{post.data.title}</a>
								<div>{post.data.tagline}</div>
							</div>
							<div class="text-right italic text-violet-500 text-sm flex align-middle justify-center">
								<FormattedDate date={post.data.pubDate} />
							</div>
						</div>
					</li>
				))
			}
		</ul>
	</section>
</OuterLayout>
