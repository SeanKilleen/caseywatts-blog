---
import Page from "../../src/layouts/Page.astro"
import SEOTags from "../components/SEOTags.svelte";
---

<SEOTags 
	title="Soundboard"
	description="You know those little sound bytes that live in your head forever? Here are some of Casey's!"
	contentType="website"
	url={Astro.url.href}
/>

<Page>
  <audio id="catbug-whoopsies" preload="auto" src="/soundboard/catbug-whoopsies.mp3"></audio>
  <audio id="sardonyx-elegant" preload="auto" src="/soundboard/sardonyx-elegant.m4a"></audio>
  <audio id="teengirlsquad-sogood" preload="auto" src="/soundboard/teengirlsquad-sogood.m4a"></audio>
  <audio id="eggs" preload="auto" src="/soundboard/eggs.m4a"></audio>

  <h1 style="text-align: center">Soundboard</h1>
  <div class="some-section">
    <div class="grid grid-cols-2">
      <a href="#catbug-whoopsies" class="button-link m-2" onclick="document.getElementById('catbug-whoopsies').play();">
        WHOOPSIES ðŸ”Š
      </a>
      <a href="https://www.youtube.com/watch?v=rFWb7DG7zTc" class="button-link m-2">
